
<section class="item">
  <h1><%= @item.name %></h1>
  
  <%= link_to 'Edit Item', edit_admin_item_path(@item) %>
  <%= link_to 'Remove Item', admin_item_path(@item), :method => :delete %>
  
  <% if @item.photos.present? %>
    <h3>Current Photos</h3>
    <div class="photos">
      <% @item.photos.each do |photo| %>
        <%= link_to image_tag(photo.photo.url), photo.photo.url, { :class => 'photo' } %>
        <%= link_to 'Remove Photo', admin_photo_path(photo), { :method => :delete, :class => 'item_photo' } %>
          
      <% end %>
    </div>
  
  <% end %>
</section>

