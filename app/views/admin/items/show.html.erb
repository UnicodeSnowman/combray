
<section class="item">
  <h1><%= @item.name %></h1>
  
  <%= link_to 'Edit Item', edit_admin_item_path(@item) %>
  
  <% if @item.photo.present? %>
    <h3>PHOTOS</h3>
    <div class="photo">
      <%= link_to File.basename(@item.photo.path), @item.photo.url %>
    </div>
  
  <% end %>
</section>

