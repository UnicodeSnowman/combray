<% title(@item.name, "Items") %>
<%= stylesheet_link_tag "print", media: "print" %>

<div id="items-show">
  <div class="row-fluid">
    <div class="span8 main-image">
      <% if @item.photos.first %>
        <%= image_tag(@item.photos.first.photo.main_show.url) %> 
      <% end %>
    </div>

    <div class="span4 detail">
      <h1 class="item-title"><%= @item.name.titleize %></h1>
      <p>
        <span>Ref #:</span>
        <span><%= @item.code %></span>
      </p>

      <p class="description">
        <%= @item.description %>
      </p>

      <% if @item.age %>
        <p>
          <span>Age:</span>
          <span><%= @item.age %></span>
        </p>
      <% end %> 

      <% if @item.measurements %>
        <p>
          <span>Measurements:</span>
          <span><%= @item.measurements %></span>
        </p>
      <% end %> 

      <p class="actions">
        <%= link_to "Enquiry", "mailto:contact@combraygallery.com?subject=Combray Gallery: Item: ##{@item.code} - #{@item.name.titleize}"%>
        <span class="divider">|</span>
        <a class="print-button">Print</a>
        <span class="divider">|</span>
        <%= link_to "Share", "mailto:?subject=Combray Gallery: Item: ##{@item.code} - #{@item.name.titleize}"%>
      </p>

    </div>
  </div>

  <div class="row-fluid">
      <ul class="span8 thumbnails">
        <% @item.photos.each_with_index do |photo, index| %>
          <li class="thumbnail">
            <span class="thumbnail">
              <%= image_tag(photo.photo.thumb_show.url, :data => { :url => photo.photo.main_show.url }) %> 
            </span>
          </li>
        <% end %>
      </ul>
  </div>
</div>

