<section class="content-inner">
  <div class="row-fluid">
    <div class="span12">
      <ul class="thumbnails">
      <% @items.each do |item| %>
        <li >
          <div class="item thumbnail">
            <% if item.photos.empty? %>
              <%= image_tag('http://placehold.it/260x260') %>
            <% else %>
              <%= image_tag(item.photos.first.photo.thumb.url) %>
            <% end %>
    
            <%= link_to(item) do %>
              <div class="item-blurb">
                <p>
                  <%= item.name %>
                </p>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
      </ul> 
    </div>
  </div>
  <div class="row-fluid">
    <p class="span4">Displaying <%= @items.length %> item(s)</p>
    <p class="span2 offset5" style="text-align: right;"><span><a href="#">Previous</a> | <a href="#">Next</a></span></p>
  </div>
</section>

