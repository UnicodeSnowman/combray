<% title(@item.name, "Items") %>

<h1><%= @item.name %></h1>

<div>
  <%= link_to 'Edit Item', edit_item_path(@item) %>
  <%= link_to 'Remove Item', item_path(@item), :method => :delete, :data => { confirm: 'Are you sure you want to remove this item?'} %>
</div>


<div class="main">
  <%= image_tag('http://placehold.it/400x600') %>
  <%= #image_tag(@item.photos[0].photo.url) %>
</div>

<div class="thumbs">

    <% [1,2,3,4].each do |item| %>
      <li>
        <%= image_tag('http://placehold.it/200x200') %> 
      </li>
    <% end %>
  
    <% #@item.photos.each do |thumb| %>
      <li>
        <%= #image_tag thumb.photo.url %>
      </li>
    <% #end %>
  
</div>

